{
  "name": "beatl",
  "version": "0.0.1",
  "repository": "https://github.com/djsavvy/beatl",
  "packageManager": "yarn@3.2.2",
  "engines": {
    "vscode": "^1.34.0"
  },
  "activationEvents": [
    "onCommand:extension.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "bld": "esbuild src/**/*.ts --platform=node --bundle --target=node14.18 --external:vscode --outfile=./out/extension.js",
    "dev": "esbuild src/**/*.ts --platform=node --bundle --target=node14.18 --external:vscode --outfile=./out/extension.js --watch",
    "lint": "tsc -noEmit && eslint . --ext .ts,.tsx",
    "build": "yarn run bld",
    "vscode:prepublish": "yarn run build"
  },
  "devDependencies": {
    "@types/node": "^18.6.2",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "esbuild": "^0.14.51",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "spotify-web-api-node": "^5.0.2",
    "vscode": "^1.1.37"
  }
}
